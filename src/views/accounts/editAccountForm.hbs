<h2>Edit account {{account.number}} - {{account.name}}</h2>
<div>
  <form action="/accounts/edit" method="post">
    <div class="mb-3">
      <input type="hidden" name="id" value="{{account.id}}" />
      <label for="name" class="form-label">Name</label>
      <input
        type="text"
        class="form-control"
        id="name"
        name="name"
        value="{{account.name}}"
        required
      />
    </div>

    <div class="mb-3">
      <label for="number" class="form-label">Number</label>
      <input
        type="number"
        class="form-control"
        id="number"
        name="number"
        value="{{account.number}}"
        required
      />
    </div>
    <div class="mb-3">
      <label for="type" class="form-label">Type</label>
      <input
        type="text"
        class="form-control"
        id="type"
        name="type"
        value="{{account.type}}"
        required
      />
    </div>
    <div class="mb-3">
      <label for="description" class="form-label">Description</label>
      <input
        type="text"
        class="form-control"
        id="description"
        name="description"
        value="{{account.description}}"
      />
    </div>
    <button type="submit" class="btn btn-primary">Submit Edit</button>

  </form>
  <form action="/accounts/delete" method="post">
    <input type="hidden" name="id" value="{{account.id}}" />
    <button type="submit" class="btn btn-primary">Delete Account</button>
  </form>
</div>